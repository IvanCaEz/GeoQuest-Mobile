<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="5dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="13dp"
    android:id="@+id/reviewsItem">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/user_CV"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:backgroundTint="#CFCFCF"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_TV">

            <ImageView
                android:id="@+id/user_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/user_TV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CFCFCF"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/user_CV"
            tools:text="Pepe" />

        <View
            android:id="@+id/review_TV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CFCFCF"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.18"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBottom_toTopOf="@id/reviewBox1"
            tools:text="Review" />

        <View
            android:id="@+id/reviewBox1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CFCFCF"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintWidth_percent="0.65"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/review_TV"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBottom_toTopOf="@id/reviewBox2"
             />
        <View
            android:id="@+id/reviewBox2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CFCFCF"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintWidth_percent="0.65"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/reviewBox1"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="@id/reviewBox3"
            />
        <View
            android:id="@+id/reviewBox3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CFCFCF"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintWidth_percent="0.55"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/reviewBox2"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.29" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="132dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
